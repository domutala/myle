{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "lib": ["es5", "dom", "es2015", "es2015.collection"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["./types"]
  },
  "include": ["./types", "**/*.ts", "gulpfile.js"],
  "exclude": ["node_modules", "lib"]
}
